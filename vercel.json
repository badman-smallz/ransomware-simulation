{
    "functions": {
      "api/*.py": {
        "runtime": "python3.9"
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/index.py"
      }
    ],
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      },
      {
        "src": "api/index.py",
        "use": "@vercel/python"
      }
    ]
  }
  